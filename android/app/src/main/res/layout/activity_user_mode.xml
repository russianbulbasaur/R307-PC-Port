<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:theme="@style/ThemeOverlay.BioAMS.FullscreenContainer"
    tools:context=".UserMode">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:keepScreenOn="true">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_margin="20dp"
            android:id="@+id/checkInCard"
            app:cardBackgroundColor="#282828"
            android:layout_height="0dp">
            <TextView
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:text="Check In"
                android:layout_height="wrap_content"/>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_margin="20dp"
            android:id="@+id/checkoutCard"
            app:cardBackgroundColor="#282828"
            android:layout_height="0dp">
            <TextView
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:text="Check Out"
                android:layout_height="wrap_content"/>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_weight="0.2"
            android:layout_margin="20dp"
            android:id="@+id/adminMode"
            app:cardBackgroundColor="#282828"
            android:layout_height="0dp">
            <TextView
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:text="Switch to Admin Mode"
                android:layout_height="wrap_content"/>
        </com.google.android.material.card.MaterialCardView>
    </androidx.appcompat.widget.LinearLayoutCompat>

</FrameLayout>